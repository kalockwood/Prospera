<div class="intro-text">
  
  <h2>Unete ya!</h2>
  <h4>Nos encantaría entrevistarte para determinar si Prospera es el trabajo ideal para ti. Solo ingresa tu información abajo para agendar una entrevista y da el primer paso para convertirte el mejor agente. </h4>
  <p> 
</div>



<div class="form-main">
<%= simple_form_for @layout  do |f| %>
	<%= f.input :nombres, placeholder: 'Nombres', :required => true %>
	<%= f.input :apellido_paterno, label: 'Apellido Paterno',placeholder: 'Apellido Paterno',:required => true %>
	<%= f.input :apellido_materno, label: 'Apellido Materno',placeholder: 'Apellido Materno', :required => true %>
	<%= f.input :certificado_prepa, :collection => [['Si'], ['No']], label: 'Tiene certificado de preparatoria o bachillerato? (Es indispensable contar con el o estar a 6 meses de obtenerlo)', :required => true%>
	<%= f.input :fecha_nacimiento, label: 'Fecha de Nacimiento', placeholder: 'dd/mm/aaaa', :required => true %>
	<%=  f.input :lugar_nacimiento, label: 'Lugar de Nacimiento'%>
	<%= f.input :calle_num, label: 'Domicilio - Calle y Numero'%>
	<%= f.input :colonia, label: 'Colonia'%>
	<%= f.input :municipio, label: 'Municipio o Delegacion', :required => true%>
	<%= f.input :estado, label: 'Estado', :required => true%>
	<%= f.input :cp, label: 'Codigo Postal'%>
	<%= f.input :tel_fijo, label: 'Telefono Fijo'%>
	<%=  f.input :celular, label: 'Celular'%>
	<%=  f.input :email, label: 'Email', :required => true%> 
	
	<%=  f.input :ultima_empresa, label: 'Ultima Empresa en la que laboro (Empresa, Nombre de Jefe Directo y Telefono)'%> 
	<%=  f.input :nombre_referencia_1, label: 'Referencia Personal 1 - Nombre'%> 
	<%=  f.input :telefono_referencia_1, label: 'Referencia Personal 1 - Telefono'%> 
	<%=  f.input :nombre_referencia_2, label: 'Referencia Personal 2 - Nombre'%>
	<%=  f.input :telefono_referencia_2, label: 'Referencia Personal 2 - Telefono'%> 
	<%=  f.input :nombre_referencia_3, label: 'Referencia Personal 3 - Nombre'%> 
	<%=  f.input :telefono_referencia_3, label: 'Referencia Personal 3 - Telefono'%>
	<%=  f.input :rfc, label: 'RFC'%> 
	<%=  f.input :escolaridad, label: 'Escolaridad'%>
	<%=  f.input :ingreso_actual, label: 'Ingresos actuales mensuales aproximados'%> 
	<%=  f.input :ingreso_esperado, label: 'Ingresos Mensuales Esperados'%>
	
	<%=  f.input :gastos_mensuales, label: '¿A cuanto ascienden aproximadamente sus gastos mensuales?'%>
	<%= f.input :actualmente_vive_con, :collection => [['Padres'], ['Familia'], ['Solo'], ['Otro']],   label: 'Actualmente vive con'%> 
	<%= f.input :personas_dependen, :collection => [['Padres'], ['Hijos'], ['Conyugue'], ['Otros']],  label: 'Personas que dependen de usted'%>
	<%= f.input :estado_civil, :collection => [['Solter@'], ['Casad@'], ['Divorciad@'], ['Otro']],  label: 'Estado Civil'%>   
	<%= f.input :demanda, :collection => [['Si'], ['No']],  label: '¿Ha sido parte de una demanda?'%>   

	<%=  f.input :deporte , label: '¿Practica usted algún deporte? (Favor de indicar cual)'%> 
	<%= f.input :sindicato, :collection => [['Si'], ['No']],  label: '¿Ha estado afiliado a algún sindicato?'%>
	<%= f.input :seguro_vida, :collection => [['Si'], ['No']],  label: '¿Tiene seguro de vida?'%>
	
	 
	
	<%= f.button :submit, "Enviar" %>
<% end %>
</div>

